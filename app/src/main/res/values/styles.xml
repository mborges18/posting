<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- TextView styles -->
    <style name="TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_normal_widgets</item>
        <item name="android:textColor">@color/textColor</item>
    </style>

    <style name="TextViewForm" parent="TextView">
        <item name="android:layout_marginTop">@dimen/form_content_top_margin</item>
    </style>

    <style name="TextViewInformation" parent="TextView">
        <item name="android:textSize">@dimen/text_size_timeline_small</item>
    </style>

    <style name="TextViewTimelineTitle" parent="TextView">
        <item name="android:textSize">@dimen/text_size_timeline_title</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextViewTimelineMessage" parent="TextView">
        <item name="android:textSize">@dimen/text_size_timeline_text</item>
    </style>

    <style name="TextViewTimelineDate" parent="TextView">
        <item name="android:textSize">@dimen/text_size_timeline_date</item>
    </style>

    <style name="TextViewLoginTitle" parent="TextView">
        <item name="android:textSize">@dimen/text_size_login_title</item>
    </style>

    <style name="TextViewTitle" parent="TextView">
        <item name="android:textSize">@dimen/text_size_timeline_app_title</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextViewFormTitle" parent="TextView">
        <item name="android:layout_marginTop">@dimen/form_content_top_margin</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Button styles -->
    <style name="Button" parent="Clickable">
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_width">@dimen/button_size_widgets</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/background_rounded_row_blue</item>
        <item name="android:textColor">@color/textColorButton</item>
    </style>

    <style name="ButtonForm" parent="Button">
        <item name="android:layout_width">0dp</item>
        <item name="layout_constraintWidth_percent">.8</item>
        <item name="android:layout_marginTop">@dimen/form_input_top_margin</item>
    </style>

    <style name="ButtonFormOutline" parent="ButtonForm">
        <item name="android:textColor">@color/textColor</item>
        <item name="android:background">@drawable/background_rounded_outline_blue</item>
    </style>

    <!-- EditText styles -->
    <style name="EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_normal_widgets</item>
        <item name="android:padding">@dimen/edit_padding_widgets</item>
        <item name="android:background">@drawable/background_input_gray</item>
    </style>

    <style name="EditTextForm" parent="EditText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_marginTop">@dimen/form_input_top_margin</item>
        <item name="layout_constraintWidth_percent">.8</item>
    </style>

    <!-- CardView styles -->
    <style name="AppCardView" parent="Clickable">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/default_margin</item>
        <item name="android:layout_marginRight">@dimen/default_margin</item>
        <item name="android:layout_marginBottom">@dimen/default_margin</item>
        <item name="elevation">@dimen/card_elevation</item>
        <item name="cardCornerRadius">@dimen/card_radius</item>
    </style>

    <style name="Clickable">
        <item name="android:clickable">true</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>
</resources>
