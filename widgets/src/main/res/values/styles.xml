<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextViewWidgets">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="TextViewDialogTitleWidgets" parent="TextViewWidgets">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">@dimen/text_size_title_dialog_widgets</item>
        <item name="android:padding">@dimen/dialog_title_padding_widgets</item>
    </style>

    <style name="TextViewDialogMessageWidgets" parent="TextViewWidgets">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">@dimen/text_size_message_dialog_widgets</item>
        <item name="android:padding">@dimen/dialog_message_padding_widgets</item>
    </style>
</resources>